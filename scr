#!/bin/bash

# Definir el nombre del proyecto
PROJECT_NAME="funpro-2510-git-github-diego123445566"

# Crear la estructura del proyecto
echo "Creando la estructura del proyecto..."
mkdir -p $PROJECT_NAME/{src,docs,images}

# Crear archivos básicos
touch $PROJECT_NAME/.gitignore
touch $PROJECT_NAME/README.md
touch $PROJECT_NAME/docs/uso_consola.md
touch $PROJECT_NAME/docs/repositorio_local.md
touch $PROJECT_NAME/docs/repositorio_remoto.md
touch $PROJECT_NAME/src/main.c

# Escribir contenido en README.md
echo "# $PROJECT_NAME" > $PROJECT_NAME/README.md
echo "Este es un proyecto base con estructura organizada y un script en C." >> $PROJECT_NAME/README.md

# Escribir un código base en C en main.c
cat <<EOL > $PROJECT_NAME/src/main.c
#include <stdio.h>

int main() {
    printf("Hola, Git Bash! Proyecto inicializado correctamente.\\n");
    return 0;
}
EOL

# Inicializar repositorio Git
cd $PROJECT_NAME
git init
git add .
git commit -m "Inicialización del proyecto con estructura y archivos básicos"

echo "Proyecto '$PROJECT_NAME' creado y repositorio Git inicializado con éxito."
